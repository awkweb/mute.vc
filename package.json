{
    "name": "mute.vc",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build": "next build",
        "commit": "git-cz",
        "dev": "next dev",
        "start": "next start",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@ridi/object-case-converter": "^2.0.4",
        "autolinker": "^3.14.1",
        "firebase": "^8.0.0",
        "next": "10.0.0",
        "next-auth": "^3.1.0",
        "next-themes": "^0.0.6",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-feather": "^2.0.8",
        "react-use": "^15.3.4",
        "twit": "^2.2.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/next-auth": "^3.1.14",
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.55",
        "@types/react-dom": "^16.9.9",
        "@types/twit": "^2.2.28",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "commitizen": "^4.2.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.1.2",
        "tailwindcss": "^1.9.6",
        "typescript": "^4.0.5"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --max-warnings 0 --cache --ignore-pattern '!.eslintrc.js'"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "endOfLine": "lf",
        "printWidth": 80,
        "arrowParens": "always",
        "semi": false,
        "singleQuote": true
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
